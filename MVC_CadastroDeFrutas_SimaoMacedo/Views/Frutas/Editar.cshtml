@{ 

    Business.Fruta fruta = ViewBag.Fruta;

}
<div class="jumbotron">
    <h3>NOVA FRUTA</h3>
    <div>
        <a href="/frutas" class="btn btn-default">Voltar</a>
    </div>

    <form action="/frutas/@fruta.Id/alterar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" value="@fruta.Nome" name="nome" maxlength="50">
        </div>
        <div class="form-group">
            <label for="descricao">Descrição:</label>
            <label for="descricaor">@fruta.Descricao</label>
            <textarea class="form-control" id="descricao" name="descricao" maxlength="4000">@fruta.Descricao</textarea>

        </div>
        <div class="form-group">
            <label for="imagem">Imagem:</label>
            <input type="text" class="form-control" id="imagem" value="@fruta.Imagem" name="imagem">
        </div>

        <button type="submit" class="btn btn-success">Alterar</button>
    </form>

</div>

